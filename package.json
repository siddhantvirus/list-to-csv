{
  "name": "list-to-csv",
  "displayName": "List to CSV",
  "description": "Convert lists to CSV format",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "list-to-csv.convert",
        "title": "Convert List to CSV"
      },
      {
        "command": "list-to-csv.openSettings",
        "title": "Open List to CSV Settings"
      },
      {
        "command": "list-to-csv.openWebview",
        "title": "Open List to CSV Converter (WebView)"
      },
      {
        "command": "list-to-csv.convertToCommaLine",
        "title": "Convert List to Comma Separated Line"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "list-to-csv.convert",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "list-to-csv.convertToCommaLine",
          "when": "editorHasSelection",
          "group": "1_modification"
        },
        {
          "command": "list-to-csv.openWebview",
          "when": "editorHasSelection",
          "group": "1_modification"
        }
      ]
    },
    "configuration": {
      "title": "List to CSV",
      "properties": {
        "list-to-csv.delimiter": {
          "type": "string",
          "default": ",",
          "description": "Character used to separate fields in the CSV output"
        },
        "list-to-csv.includeHeaders": {
          "type": "boolean",
          "default": true,
          "description": "Include header row in the CSV output"
        },
        "list-to-csv.quoteAllFields": {
          "type": "boolean",
          "default": false,
          "description": "Quote all fields in the CSV output, not just those that need it"
        },
        "list-to-csv.escapeCharacter": {
          "type": "string",
          "default": "\"",
          "description": "Character used to quote fields in the CSV output"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.101.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "eslint": "^9.25.1",
    "esbuild": "^0.25.3",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.8.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/list-to-csv.git"
  },
  "keywords": [
    "csv",
    "list",
    "bullet points",
    "numbered list",
    "conversion",
    "data",
    "formatter",
    "sql",
    "in clause"
  ]
}
